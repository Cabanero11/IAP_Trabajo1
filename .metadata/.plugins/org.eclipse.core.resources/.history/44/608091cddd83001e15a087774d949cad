	<http:request-config name="HTTP_Request_Configuration" host="personales.upv.es" port="80" doc:name="HTTP Request Configuration"/>
	<db:mysql-config name="MySQL_Configuration" host="localhost" port="3306" user="root" database="transiap" doc:name="MySQL Configuration"/>
	<flow name="RecibirSolicitudDeDescargaYSubirInformeXML_A_laBD">
		<poll doc:name="Poll">
			<fixed-frequency-scheduler frequency="5" timeUnit="SECONDS"/>
			<http:request config-ref="HTTP_Request_Configuration" path="/pedvalar/iap/TransIAP/SDC.xml" method="GET" doc:name="HTTP"/>
		</poll>
		<object-to-string-transformer doc:name="Object to String"/>
		<dw:transform-message doc:name="Transform Message" metadata:id="37cf2706-1226-43f4-b1f1-1b00c17e1896">
			<dw:input-payload mimeType="application/xml" doc:sample="C:\Users\Antonio\Downloads\DESCARGAS\UNIVERSIDAD\IAP\PROYECTO\Proyecto-Entregable1-ficheros\documentos-intercambio\SNTN_SolicitudDescargaContenedores.xml"/>
			<dw:set-payload><![CDATA[%dw 1.0
%output application/java
%namespace ns0 http://www.sntn.es/standards
---
{
	id: (payload.ns0#SNTN_SolicitudDescargaContenedores.@idd splitBy "SNTN:SDC:" joinBy "") as :number,
	fecha: now as :string {format: "dd/MM/yyyy HH:mm:ss"},
	naviera: payload.ns0#SNTN_SolicitudDescargaContenedores.ns0#AgenciaNaviera.ns0#nombre
}
]]></dw:set-payload>
		</dw:transform-message>
		<echo-component doc:name="Echo"/>
		<db:update config-ref="MySQL_Configuration" doc:name="Database">
			<db:parameterized-query><![CDATA[UPDATE `solicitud_descarga`
SET `fecha` = #[payload.fecha], `naviera` = #[payload.naviera]
WHERE `id` = #[payload.id];]]></db:parameterized-query>

		</db:update>

	</flow>
	<flow name="RecibirSolicitudDeDescargaYSubirInformeJSON_A_laBD">
    <poll doc:name="Poll">
        <fixed-frequency-scheduler frequency="5" timeUnit="SECONDS"/>
        <http:request config-ref="HTTP_Request_Configuration" path="/pedvalar/iap/TransIAP/SDC.json" method="GET" doc:name="HTTP"/>
    </poll>
    <json:json-to-object-transformer doc:name="JSON to Object"/>
		<set-variable variableName="id" value="#[payload.informeDescarga.idd replace('SNTN:SDC:', '')]" doc:name="Set ID"></set-variable>
		<set-variable variableName="fecha" value="#[now() as :string {format: 'dd/MM/yyyy HH:mm:ss'}]" doc:name="Set Fecha"></set-variable>
    	<set-variable variableName="naviera" value="#[payload.informeDescarga.naviera]" doc:name="Set Naviera"/>
		<echo-component doc:name="Echo"/>
    <db:update config-ref="MySQL_Configuration" doc:name="Database">
			<db:parameterized-query><![CDATA[INSERT INTO `solicitud_descarga`(`id`, `fecha`, `naviera`)
VALUES (#[payload.id], #[payload.fecha], #[payload.naviera])
ON DUPLICATE KEY UPDATE
`fecha` = VALUES(`fecha`), `naviera` = VALUES(`naviera`);]]></db:parameterized-query>
    </db:update>
</flow>

</mule>
